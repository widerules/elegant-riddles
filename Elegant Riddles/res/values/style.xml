<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="android:Theme.Light">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btnselector</item>
    </style>

    <style name="TitleStyle" parent="android:Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="secondaryTitleStyle" parent="android:Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="FontStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>